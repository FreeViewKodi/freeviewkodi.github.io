<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.freeview-kodi"
           name="FreeViewKodi Repository"
           version="0.0.2"
           provider-name="FVK">
        <extension point="xbmc.addon.repository"
                   name="FreeViewKodi Repository">
            <dir>
                <info compressed="true">https://freeviewkodi.github.io/repo/addons.xml</info>
                <checksum>https://freeviewkodi.github.io/repo/addons.xml.md5</checksum>
                <datadir zip="true">https://freeviewkodi.github.io/repo/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repository for FreeViewKodi addon</summary>
            <description>Install addons from the FreeViewKodi developer.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>

    <addon id="plugin.video.freeview-kodi"
           name="FreeViewKodi"
           version="1.0.0"
           provider-name="Your Name">
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A summary of your addon</summary>
            <description>A longer description of what your addon does.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>

    <addon id="plugin.audio.music-addon"
           name="Music Add-on"
           version="1.0.0"
           provider-name="Your Name">
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>audio</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A music streaming addon.</summary>
            <description>This add-on plays music from various online sources.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>

    <addon id="plugin.program.utility-tool"
           name="Utility Tool"
           version="1.0.0"
           provider-name="Your Name">
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>program</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A useful Kodi utility.</summary>
            <description>This add-on provides various tools and settings to manage your Kodi setup.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
</addons>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.freeview-kodi"
           name="[COLOR gold]FreeViewKodi Repository[/COLOR]"
           version="3.6.5"
           provider-name="FreeViewKodi">
        <extension point="xbmc.addon.repository"
                   name="FreeViewKodi Repository">
            <dir>
                <info compressed="true">https://freeviewkodi.github.io/repo/addons.xml</info>
                <checksum>https://freeviewkodi.github.io/repo/addons.xml.md5</checksum>
                <datadir zip="true">https://freeviewkodi.github.io/repo/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>The official repository for FreeViewKodi addons.</summary>
            <description>Install and receive updates for all addons created by the FreeViewKodi team, including M3U managers, web UIs, and program tools.</description>
            <disclaimer>This repository and its addons are not affiliated with the official Kodi project.</disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>

    <addon id="plugin.program.m3u-manager-FVK"
           name="M3U Manager"
           version="1.0.0"
           provider-name="FreeViewKodi">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.requests" version="2.22.0" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>program</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A tool to manage and update your M3U playlist files.</summary>
            <description>This addon allows you to easily edit, sort, and update your IPTV M3U playlists directly from Kodi, ensuring your channel list is always current.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <screenshot>resources/screenshot1.jpg</screenshot>
            </assets>
        </extension>
    </addon>

    <addon id="service.webui.status-FVK"
           name="Status WebUI"
           version="1.0.0"
           provider-name="FreeViewKodi">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.service" library="service.py" start="startup"/>
        <extension point="xbmc.addon.metadata">
            <summary>A web interface to monitor Kodi status.</summary>
            <description>Provides a simple web interface to view the current status, logs, and other useful information about your Kodi instance from any web browser on your local network.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
    

        <addon id="plugin.audio.music-fvk"
           name="Music Add-on"
           version="1.0.0"
           provider-name="FreeViewKodi">
        <url>https://freeviewkodi.github.io/repo/plugin.audio.music-addon-1.0.0.zip</url>
        <extension point="xbmc.addon.metadata">
            <summary>A music streaming addon.</summary>
            <description>This add-on plays music from various online sources.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

    <addon id="plugin.program.utility-fvk"
           name="Utility Tool"
           version="1.0.0"
           provider-name="FreeViewKodi">
        <url>https://github.com/FreeViewKodi/plugin.program.utility/archive/refs/heads/fvk.zip</url>
        <extension point="xbmc.addon.metadata">
            <summary>A useful Kodi utility.</summary>
            <description>This add-on provides various tools and settings to manage your Kodi setup.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

</addons>




<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- This is the entry for your repository addon itself -->
    <addon id="repository.freeviewkodi"
           name="FreeViewKodi Repository"
           version="1.0.0"
           provider-name="Your Name">
        <extension point="xbmc.addon.repository"
                   name="FreeViewKodi Repository">
            <dir>
                <info compressed="true">https://freeviewkodi.github.io/repo/addons.xml</info>
                <checksum>https://freeviewkodi.github.io/repo/addons.xml.md5</checksum>
                <datadir zip="true">https://freeviewkodi.github.io/repo/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repository for FreeViewKodi addon</summary>
            <description>Install addons from the FreeViewKodi developer.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>

    <!-- This is the entry for your main video addon -->
    <addon id="plugin.video.freeviewkodi"
           name="FreeViewKodi"
           version="1.0.0"
           provider-name="Your Name">
        <!-- The URL points to the zip file for this specific addon -->
        <url>https://freeviewkodi.github.io/repo/plugin.video.freeviewkodi-1.0.0.zip</url>
        <!-- The checksum is the MD5 hash of the addon's zip file, not the addons.xml file -->
        <checksum>your_md5_hash_of_the_addon_zip_here</checksum>
        <extension point="xbmc.addon.metadata">
            <summary>A summary of your addon</summary>
            <description>A longer description of what your addon does.</description>
            <disclaimer>A disclaimer if needed</disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

</addons>
